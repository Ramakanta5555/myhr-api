@Library('jhc') _
pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            when{
            expression{
                params.branchName == "develop"
            }
        }
            steps {
                git branch: "${params.branchName}", url: 'https://github.com/Ramakanta5555/myhr-api'
           }
       }
        stage('maven Build') {
            steps {
                sh 'mvn clean package'
        }
        
        stage('tomcat Deploy-Dev') {
            steps {
                tomcatDeploy()
             }
            }
        }
    }
   post {
  always {
    cleanWs()
  }
}
}
